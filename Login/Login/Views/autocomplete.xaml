                                    </StackLayout>

                                    <!-- Search location -->
                                    <StackLayout Margin="0,5,0,0" HorizontalOptions="StartAndExpand">
                                        <Label Text="Select Location" TextColor="Black" FontSize="15" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                                    </StackLayout>
                                    <StackLayout>
                                        <Frame BorderColor="Black" Padding="0" Margin="0"  CornerRadius="10" HorizontalOptions="FillAndExpand">
                                            <Entry Text="{Binding LocationQuery}" BackgroundColor="#f9f9f9" TextColor="#FF464859" FontSize="16" PlaceholderColor="#646b7a" x:Name="searchBar" Placeholder="Search" AbsoluteLayout.LayoutBounds="15,70,285,38" AbsoluteLayout.LayoutFlags="None"/>
                                        </Frame>
                                        <ListView ItemsSource="{Binding Location}" CachingStrategy="RecycleElement" BackgroundColor="White" AbsoluteLayout.LayoutBounds="20,110,269,160" AbsoluteLayout.LayoutFlags="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <ViewCell>
                                                        <StackLayout BackgroundColor="White">
                                                            <Label FontSize="16" TextColor="#FF464859">
                                                                <Label.FormattedText>
                                                                    <FormattedString>
                                                                        <Span Text="{Binding CityNam}" />
                                                                        <Span Text=", " />
                                                                        <Span Text="{Binding Province}" />
                                                                    </FormattedString>
                                                                </Label.FormattedText>
                                                            </Label>
                                                        </StackLayout>
                                                    </ViewCell>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackLayout>

                                    <!-- Search specialty -->
                                    <StackLayout Margin="0,20,0,0" HorizontalOptions="StartAndExpand">
                                        <Label Text="Select Specialization" TextColor="Black" FontSize="15" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                                    </StackLayout>
