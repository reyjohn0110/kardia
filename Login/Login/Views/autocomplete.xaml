                                                    <ViewCell>
                                                        <StackLayout BackgroundColor="White">
                                                            <Label Text="{Binding .}" FontSize="16" TextColor="#FF464859"/>
                                                        </StackLayout>
                                                    </ViewCell>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackLayout>


                                    <StackLayout Margin="0,20,0,0" Padding="0">
                                        <Button Text="Search"  
                                        Command="{Binding Command_Filter}"
                                        BackgroundColor="Red" 
                                        TextColor="White" FontAttributes="Bold" CornerRadius="10" WidthRequest = "100" HorizontalOptions="FillAndExpand" HeightRequest="44"/>
                                    </StackLayout>

                                    <!--Find Doctor -->
                                    <StackLayout Margin="0,20,0,0" HorizontalOptions="StartAndExpand">
